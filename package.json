{
  "name": "mcp-terminal-tools",
  "version": "1.0.0",
  "description": "Cross-platform MCP server for terminal access",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "mcp-terminal": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "bash ./force-kill-port.sh 8080 && tsx watch src/main.ts",
    "start": "node dist/main.js",
    "build:smithery": "tsc -p tsconfig.json",
    "start:smithery": "node dist/smithery-adapter.js",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.9.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "mcp",
    "terminal",
    "claude",
    "tools",
    "cli"
  ],
  "author": "Yaswanth Ampolu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yaswanth-ampolu/smithery-mcp-server.git"
  }
}